<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>top.mddata.server</groupId>
        <artifactId>md-server</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>boot-server</artifactId>
    <description>全部功能-单体架构-启动层</description>

    <dependencies>
        <!-- 项目业务控制层 -->
        <dependency>
            <groupId>top.mddata.workbench</groupId>
            <artifactId>workbench-controller</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>top.mddata.console</groupId>
            <artifactId>console-controller</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>top.mddata.open</groupId>
            <artifactId>open-controller</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- 适配层 单体版实现类 -->
        <dependency>
            <groupId>top.mddata.open</groupId>
            <artifactId>open-boot-impl</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>top.mddata.console</groupId>
            <artifactId>console-boot-impl</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>top.mddata.workbench</groupId>
            <artifactId>workbench-boot-impl</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- 启动配置 -->
        <dependency>
            <groupId>top.mddata.common</groupId>
            <artifactId>md-common-config</artifactId>
            <version>${revision}</version>
        </dependency>
        <!-- 业务枚举扫描层 -->
        <dependency>
            <groupId>top.mddata.common</groupId>
            <artifactId>md-enumeration-scanning</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- 本项目特有的单体版通用组件 -->
        <dependency>
            <groupId>top.mddata.base</groupId>
            <artifactId>md-all-boot</artifactId>
        </dependency>

        <!-- 代码生成 -->
        <dependency>
            <groupId>top.mddata.base</groupId>
            <artifactId>md-codegen</artifactId>
        </dependency>

        <!-- 文件存储 -->
        <dependency>
            <groupId>org.dromara.x-file-storage</groupId>
            <artifactId>x-file-storage-spring</artifactId>
        </dependency>

        <!-- Dto、Vo、Entity 优雅转换 -->
        <dependency>
            <groupId>io.github.linpeilie</groupId>
            <artifactId>mapstruct-plus</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
        </dependency>

        <!-- Sa-Token 权限认证, 在线文档：http://sa-token.dev33.cn/ -->
        <dependency>
            <groupId>cn.dev33</groupId>
            <artifactId>sa-token-spring-boot3-starter</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                    <groupId>org.springframework.boot</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <!-- Sa-Token 整合 RedisTemplate -->
        <dependency>
            <groupId>cn.dev33</groupId>
            <artifactId>sa-token-redis-template</artifactId>
        </dependency>
        <!-- Sa-Token 序列化 -->
        <dependency>
            <groupId>cn.dev33</groupId>
            <artifactId>sa-token-redis-jackson</artifactId>
        </dependency>
        <!-- Sa-Token 底层依赖 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-pool2</artifactId>
        </dependency>
        <!-- Sa-Token 自动配置 -->
        <dependency>
            <groupId>cn.dev33</groupId>
            <artifactId>sa-token-spring-boot-autoconfig</artifactId>
        </dependency>
        <!-- Sa-Token 插件：整合 Forest 请求工具 (模式三需要通过 http 请求推送消息) -->
        <dependency>
            <groupId>cn.dev33</groupId>
            <artifactId>sa-token-forest</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>hutool-cache</artifactId>
                    <groupId>cn.hutool</groupId>
                </exclusion>
            </exclusions>
        </dependency>


        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!--
     根据不同的配置环境，引入不同的依赖。
     dev: 本地环境，不集成开放平台功能（无需注册到 zookeeper 和 nacos），文件存储使用本地存储
     sop: 本地环境，集成开放平台功能（注册到 zookeeper），文件存储使用 minio
     test: 测试环境 集成开放平台功能（注册到 nacos），文件存储使用 minio
     prod: 生产环境 集成开放平台功能（注册到 nacos），文件存储使用 minio
     -->
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <!-- 设置为默认激活的环境 -->
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
            </dependencies>
        </profile>
        <profile>
            <id>sop</id>
            <dependencies>
                <dependency>
                    <groupId>top.mddata.base</groupId>
                    <artifactId>sop-spring-boot-starter</artifactId>
                </dependency>
                <!-- zookeeper注册中心 -->
                <dependency>
                    <groupId>org.apache.dubbo</groupId>
                    <artifactId>dubbo-zookeeper-curator5-spring-boot-starter</artifactId>
                </dependency>
                <!-- 开发环境用本地存储，测试生产环境用minio -->
                <dependency>
                    <groupId>io.minio</groupId>
                    <artifactId>minio</artifactId>
                </dependency>
                <!-- 默认情况下，开发环境不依赖api-controller，无法使用对外接口 -->
                <dependency>
                    <groupId>top.mddata.api</groupId>
                    <artifactId>api-controller</artifactId>
                    <version>${revision}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>test</id>
            <dependencies>
                <dependency>
                    <groupId>top.mddata.base</groupId>
                    <artifactId>sop-spring-boot-starter</artifactId>
                </dependency>

                <!-- nacos注册中心 -->
                <dependency>
                    <groupId>org.apache.dubbo</groupId>
                    <artifactId>dubbo-nacos-spring-boot-starter</artifactId>
                </dependency>
                <!-- 开发环境用本地存储，测试生产环境用minio -->
                <dependency>
                    <groupId>io.minio</groupId>
                    <artifactId>minio</artifactId>
                </dependency>
                <!-- 默认情况下，开发环境不依赖api-controller，无法使用对外接口 -->
                <dependency>
                    <groupId>top.mddata.api</groupId>
                    <artifactId>api-controller</artifactId>
                    <version>${revision}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>prod</id>
            <dependencies>
                <dependency>
                    <groupId>top.mddata.base</groupId>
                    <artifactId>sop-spring-boot-starter</artifactId>
                </dependency>

                <!-- nacos注册中心 -->
                <dependency>
                    <groupId>org.apache.dubbo</groupId>
                    <artifactId>dubbo-nacos-spring-boot-starter</artifactId>
                </dependency>

                <!-- 开发环境用本地存储，测试生产环境用minio -->
                <dependency>
                    <groupId>io.minio</groupId>
                    <artifactId>minio</artifactId>
                </dependency>

                <!-- 默认情况下，开发环境不依赖api-controller，无法使用对外接口 -->
                <dependency>
                    <groupId>top.mddata.api</groupId>
                    <artifactId>api-controller</artifactId>
                    <version>${revision}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <filters>
            <filter>../../src/main/filters/config-${profile.active}.properties</filter>
        </filters>
        <finalName>${project-prefix}-${project.artifactId}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <!--打包跳过测试-->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>

            <!-- 资源插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
